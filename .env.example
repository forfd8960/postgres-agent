# PostgreSQL AI Agent Configuration

# LLM Provider Configuration
# OpenAI API key - get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# Alternative: Use a custom base URL for compatible APIs (e.g., Ollama, LM Studio)
# OPENAI_BASE_URL=http://localhost:11434/v1

# Database Configuration
# Primary database connection URL
DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres

# Alternative database profiles can be configured in config.yaml

# Application Configuration
# Log level: trace, debug, info, warn, error
PG_AGENT_LOG_LEVEL=info

# Safety level: read_only, balanced, permissive
PG_AGENT_SAFETY_LEVEL=balanced

# Session configuration
# Maximum conversation history to retain
PG_AGENT_MAX_HISTORY=50

# Timeout settings (in seconds)
# LLM response timeout
PG_AGENT_LLM_TIMEOUT=60

# Query execution timeout
PG_AGENT_QUERY_TIMEOUT=30

# Export configuration
# Default export format: json, csv, table
PG_AGENT_DEFAULT_EXPORT_FORMAT=table

# Audit logging
# Enable audit logging (true/false)
PG_AGENT_AUDIT_ENABLED=false

# Audit log file path
PG_AGENT_AUDIT_LOG_FILE=./logs/audit.jsonl

# Telemetry (anonymous usage data)
# Enable telemetry (true/false)
PG_AGENT_TELEMETRY_ENABLED=false
